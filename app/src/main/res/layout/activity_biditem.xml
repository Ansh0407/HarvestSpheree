<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/farmerName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer Name: John Doe"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Example City" />

                    <TextView
                        android:id="@+id/crop1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop: Wheat" />

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹2000 per quintal" />

                    <TextView
                        android:id="@+id/contact1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact: +919456789012" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/p1" /> <!-- Replace with your image -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/farmerName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer Name: Jane Smith"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Example Town" />

                    <TextView
                        android:id="@+id/crop2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop: Rice" />

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹2500 per quintal" />

                    <TextView
                        android:id="@+id/contact2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact: +919876543210" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/p2" /> <!-- Replace with your image -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/farmerName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer Name: Michael Brown"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Sample Village" />

                    <TextView
                        android:id="@+id/crop3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop: Corn" />

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹2200 per quintal" />

                    <TextView
                        android:id="@+id/contact3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact: +911122334455" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/p3" /> <!-- Replace with your image -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            cardview:cardElevation="4dp"
            cardview:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/farmerName4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farmer Name: Emily Davis"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/location4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Farmington" />

                    <TextView
                        android:id="@+id/crop4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crop: Barley" />

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price: ₹2700 per quintal" />

                    <TextView
                        android:id="@+id/contact4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact: +919988776655" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/p4" /> <!-- Replace with your image -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
